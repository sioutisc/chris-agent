package edu.unisa.chris.observation;
import edu.unisa.chris.agent.*;
import java.util.*;
/**
 * This plan posts Alert events for each of the data objects produced by the Activation class
 * @author  Christos Sioutis
 */
public plan Observation extends Plan{
	#handles event Alert alert;
	#posts event Information information;
	#uses interface CHRISFunctions chris;

	
	body(){
                chris.logInfo("CHRIS: Observation: Observation: Entering",chris.LOG_OBSERVATION,true);
		Object infoData = chris.generateInformationData(alert.alertData);
		@subtask(information.information(infoData));
	}
}
