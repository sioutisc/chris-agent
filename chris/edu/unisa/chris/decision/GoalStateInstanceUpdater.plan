package edu.unisa.chris.decision;
import edu.unisa.chris.agent.*;
import java.util.*;
import edu.unisa.chris.orientation.*;

/**
 * This plan updates the State according to the information recieved
 * @author  Christos Sioutis
 */
public plan GoalStateInstanceUpdater extends Plan{
	#handles event StateChange stateChange;
	#modifies data CurrentStateInstance goalStateInstance;
        #uses interface CHRISFunctions chris;

	body(){
                //chris.logInfo("CHRIS: Decision: GoalStateInstanceUpdater: updating with "+stateChange.stateInstance,chris.LOG_DECISION,true);
                goalStateInstance.add(stateChange.stateInstance);
	}
}
